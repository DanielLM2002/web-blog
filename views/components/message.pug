mixin message(type, message)
  if type === 'info'
    section.my-3.px-2.py-3.rounded-3.row.post-card
      h5.text-center #{message}
  else if type === 'success'
    section.mb-3.px-2.py-3.rounded-3.row.success
      h5.text-center #{message}
  else if type === 'error'
    section.mb-3.px-2.py-3.rounded-3.row.error
      h5.text-center #{message}
  else if type === 'comment'
    section.mx-1.ml-2.px-2.py-3.rounded-3.row.comment
      h5.text-center #{message}