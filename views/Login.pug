extends ./layout/defaultLayout

block content 
  section.col-5.col-md-8.col-lg-7.col-xl-5.col-xxl-5.justify-content-center(style="margin-right: 10px")
    section.px-2.py-3.rounded-3.row.post-card
      form(action='/login/' method='POST')
        .form-outline
          h5.text-center.mt-2 Login 
          hr
          if (Error === true)
            include ./components/message 
            +message('error', 'Invalid user credentials')
          label.form-label Email
          input.form-control.text-white.mb-3(
            type='text', 
            name='email'
            style='background: #282828'
          )
          label.form-label Password
          input.form-control.text-white.mb-3(
            type='password', 
            name='password'
            style='background: #282828'
          )
          a.h6.author-link(href='/signup') Don't have an account? Sign up
          .d-grid.gap-2.mt-3
            button.btn.custom-button(type='submit') Login